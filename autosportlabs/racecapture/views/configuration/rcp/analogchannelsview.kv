#:kivy 1.8.0

<AnalogChannelsView>:

<AnalogChannel>:
    padding: [5,5]
	orientation: 'horizontal'            
	BoxLayout:
        orientation: 'vertical'
        padding: [0,0,2,0]
        spacing: [2,2]
        HSeparator:
            text: 'Configuration'
        ChannelNameSelectorView:
            rcid: 'chanId'
            channel_type: 1
            size_hint: (1.0,0.3)
        SampleRateSelectorView:
            rcid: 'sr'
            size_hint: (1.0,0.3)
        HSeparator:
            text: 'Mode'
	    GridLayout:
	        size_hint: (1.0, 0.5)
	        cols: 3
	        Label:
        		text: 'Raw (0 - 1023)'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smRaw'
                on_active: root.on_scaling_type_raw(*args)
            Label:
	        Label:
	        	text: 'Linear'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smLinear'
                on_active: root.on_scaling_type_linear(*args)
			FloatValueField:
				rcid: 'linearscaling'
				on_text: root.on_linear_map_value(*args)	
	        Label:
	        	text: 'Mapped'
	        CheckBox:
	        	group: 'scalingType'
                rcid: 'smMapped'
                on_active: root.on_scaling_type_map(*args)
			Label:               
    VSeparator:
    BoxLayout:
        orientation: 'vertical'
        padding: [2,0,0,0]
        HSeparator:
            text: 'Calibration'
        AnalogScalingMapEditor:
            rcid: 'mapEditor'
 

<AnalogScalingMapEditor>:
    orientation: 'vertical'
    Graph:
        size_hint: (1.0, 0.6)
        rcid: 'scalingGraph'
        xlabel: 'Volts'
        ylabel: 'Scaled'
        x_ticks_minor: 1
        y_grid_label: True
        x_grid_label: True
        x_grid: True
        y_grid: True
    GridLayout:
        cols: 6
        size_hint: (1.0, 0.4)
        Label:
            text: ''
        Label:
            text: '1'
        Label:
            text: '2'
        Label:
            text: '3'
        Label:
            text: '4'
        Label:
            text: '5'
        Label:
            text: 'Volts'
        FloatValueField:
            rcid: 'v_0'
            text: ''
            on_text: root.on_volts(0, *args)
        FloatValueField:
            rcid: 'v_1'
            text: ''
            on_text: root.on_volts(1, *args)            
        FloatValueField:
            rcid: 'v_2'
            text: ''
            on_text: root.on_volts(2, *args)            
        FloatValueField:
            rcid: 'v_3'
            text: ''
            on_text: root.on_volts(3, *args)            
        FloatValueField:
            rcid: 'v_4'
            text: ''
            on_text: root.on_volts(4, *args)            
        Label:
            text: 'Scaled'
        FloatValueField:
            rcid: 's_0'
            text: ''
            on_text: root.on_scaled(0, *args)            
        FloatValueField:
            rcid: 's_1'
            text: ''
            on_text: root.on_scaled(1, *args)            
        FloatValueField:
            rcid: 's_2'
            text: ''
            on_text: root.on_scaled(2, *args)            
        FloatValueField:
            rcid: 's_3'
            text: ''
            on_text: root.on_scaled(3, *args)            
        FloatValueField:
            rcid: 's_4'
            text: ''
            on_text: root.on_scaled(4, *args)            
