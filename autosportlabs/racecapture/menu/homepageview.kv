#:kivy 1.8
<DisabledFeatureButton>
	tile_color: (0.3, 0.3, 0.3, 1.0)
	
<FeatureButton>
	title_font: 'resource/fonts/eurocaps.ttf'
	title_font_size: dp(25)
	icon_color: (0.0, 0.0, 0.0, 1.0)
	title_color: (0.2, 0.2, 0.2, 1.0)
	line_width: 5
	
	
<HomePageView>:
	BoxLayout:
		orientation: 'horizontal'
		BoxLayout:
			orientation: 'vertical'
			AnchorLayout:
				size_hint_y: 0.1
				size_hint_x: 1.0
				anchor_x: 'left'
				anchor_y: 'center'

				Image:
					source: 'autosportlabs/racecapture/menu/rc_logo.png'
					height: dp(85)
					size_hint_x: None	
			HLineSeparator:
				size_hint_y: 0.05
			FloatLayout:
				size_hint_y: 0.80
				Label:
					size_hint_y: None
					font_size: dp(40)
					font_name: 'resource/fonts/Roboto-Thin.ttf'
					pos_hint: {'center_y':0.57}
					text: 'Welcome To RaceCapture'
		GridLayout:
			padding: [dp(50), dp(50)]				
			spacing: dp(60)
			rows: 2
			cols: 2
			DisabledFeatureButton:
				icon: '\357\203\244'
				title: 'Dashboard'
				on_press: root.show_view('dashboard')
			DisabledFeatureButton:
				icon: '\357\202\200'
				title: 'Analysis'
				on_press: root.show_view('analysis')				
			FeatureButton:
				icon: '\357\202\205'
				title: 'Configuration'
				on_press: root.show_view('config')
			FeatureButton:
				icon: '\357\200\230'
				title: 'Race Tracks'
				on_press: root.show_view('tracks')
			
